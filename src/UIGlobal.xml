<Defaults>
    <Text class="UIText" fontSize="18" fontStyle="Bold" Color="#FFFFFF"/>
</Defaults>
<Panel id="Settings" visibility="false" width="564" height="380" returnToOriginalPositionWhenReleased="false" allowDragging="true" color="#DDDDDD">
    <VerticalLayout padding="15" spacing="15" childForceExpandHeight="false">
        <Text minHeight="20" fontSize="18" text="Generation" alignment="LowerLeft" fontStyle="Bold"/>
        <Text minHeight="20" fontSize="16" text="150+ Pokémon required to start game" alignment="LowerLeft"/>
        <HorizontalLayout padding="0" spacing="15" childForceExpandHeight="false">
            <Toggle id="gen1ToggleBtn" onValueChanged="gen1Toggle" interactable="true" isOn="true" >Gen I (151 Pokémon) </Toggle>
            <Toggle id="gen2ToggleBtn" onValueChanged="gen2Toggle" interactable="true" >Gen II (100 Pokémon) </Toggle>
        </HorizontalLayout>
        <HorizontalLayout padding="0" spacing="15" childForceExpandHeight="false">
            <Toggle id="gen3ToggleBtn" onValueChanged="gen3Toggle" interactable="true">Gen III (136 Pokémon) </Toggle>
            <Toggle id="gen4ToggleBtn" onValueChanged="gen4Toggle" interactable="true">Gen IV (107 Pokémon) </Toggle>
        </HorizontalLayout>
        <HorizontalLayout padding="0" spacing="15" childForceExpandHeight="false">
            <Toggle id="customToggleBtn" onValueChanged="customToggle" interactable="true">Custom (? Pokémon) </Toggle>
        </HorizontalLayout>
        <Text minHeight="30" fontSize="18" text="Gym Leaders" alignment="LowerLeft" fontStyle="Bold"/>
        <ToggleGroup>
            <HorizontalLayout padding="0" spacing="15" childForceExpandHeight="false">
                <Toggle isOn="true" onValueChanged="gen1LeadersToggle">Gen I</Toggle>
                <Toggle onValueChanged="gen2LeadersToggle" interactable="true">Gen II</Toggle>
                <Toggle onValueChanged="gen3LeadersToggle" interactable="true">Gen III</Toggle>
                <Toggle onValueChanged="customLeadersToggle" interactable="true">Custom</Toggle>
                <Toggle onValueChanged="randomLeadersToggle" interactable="true">Random</Toggle>
            </HorizontalLayout>
        </ToggleGroup>
        <Text minHeight="30" fontSize="18" text="Modifiers" alignment="LowerLeft" fontStyle="Bold"/>
        <Toggle isOn="false" tooltipOffset="-400" onValueChanged="randomStartersToggle" tooltip="Each player is dealt a random starter at the beginning of the game.">Random Starters</Toggle>
        <!--Toggle isOn="false" tooltipOffset="-400" onValueChanged="battleScriptingToggle" interactable="false">Battle Scripting (Experimental)</Toggle-->
        <HorizontalLayout padding="0" spacing="15" childForceExpandHeight="false">
            <Button text="Close" preferredHeight="40" width="150" onClick="closeSettings"/>
            <Button id="beginBtn" text="Begin Setup" preferredHeight="40" width="150" onClick="beginSetup"/>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>